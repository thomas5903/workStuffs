<div class="container">
    <div class="row">
        <br>
        <br>
        <form class="col-sm-4 form-horizontal">
            <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        {{input tabindex="0" class="form-control" placeholder="Email" value=model.email}}
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        {{input tabindex="0" class="form-control" placeholder="Password" value=model.password}}
                    </div>
                    
                </div>
                <div class="form-group">
                    <button {{action "validateUser"}} class="pull-right btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>